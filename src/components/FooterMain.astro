---
import Logo from '../assets/theme-images/cpslogo2.svg'

const { settings } = Astro.props
---

<footer class="@container bs-container my-24 font-semibold text-bs-foreground-dark leading-relaxed [&_a]:hover:text-bs-foreground-light [&_a]:transition-color [&_a]:duration-150" id="contact">

  <!-- Wrapper -->
  <div class="bg-bs-surface-2 p-6 md:p-16 rounded-xl grid gap-12 md:grid-cols-2">

    <!-- Left col -->
    <div class="flex flex-col gap-6 text-bs-foreground-light">

      <!-- Logo -->
      <a class="flex group" href="#top" aria-label="Back to top">
        <Logo
          class="group-hover:-rotate-180 group-hover:scale-80 transition-transform ease-bs-spring duration-1000"
          height="48"
          width="48"
        />
      </a>

      <!-- Company Info -->
      <p class="text-sm leading-relaxed">
        CPS Ltd. is owned and managed by the US company <br class="hidden sm:block" />
        Think Bricks LLC DBA Cyberpcsales (CPS). <br class="hidden sm:block" />
        We are a modern distribution company focused on the <br class="hidden sm:block" />
        computer and gaming industries.
      </p>

    </div>

    <!-- Right col -->
    <div class="flex flex-col sm:flex-row sm:justify-between gap-10 sm:gap-4 lg:gap-20">

      <!-- Nav -->
      <nav class="flex flex-col text-sm gap-10 sm:gap-4 lg:gap-5" role="navigation" aria-label="Main navigation">
        { settings?.nav?.sort((a,b) => a.title.localeCompare(b.title)).map(item =>
          <a href={ item.link } key={item.title}>
            { item.title }
          </a>
        )}
      </nav>

      <!-- Contact Info -->
      <address class="not-italic text-sm flex flex-col gap-4 leading-relaxed">
        <span>Address: Shop 133-135, 3rd Floor, Syed Grand Center, Road-28, Dhaka 1230</span>
        <span>Phone: <a href="tel:01701614923" class="hover:underline">01701614923</a></span>
        <span>Email: <a href="mailto:sales@cyberpcsales.com" class="hover:underline">sales@cyberpcsales.com</a></span>
      </address>

    </div>

  </div>

  <!-- Colophon -->
  <aside class="bs-container">
    <nav class="flex flex-col sm:flex-row gap-2 sm:gap-4 justify-center pt-16 md:pt-24 text-xs text-center">
      <a href="https://cps-bd.com/">CPS LIMITED 2025</a>
    </nav>
  </aside>

</footer>
