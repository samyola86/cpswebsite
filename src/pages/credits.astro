---
import Layout from "../layouts/Layout.astro"
import credits from "../data/credits.json"
---

<Layout title={ credits.title }>

  <!-- Wrapper: Text + Logo Side by Side -->
  <section class="max-w-[92vw] lg:max-w-6xl mx-auto px-5 py-8 md:p-20 flex flex-col md:flex-row items-start justify-between gap-8 border rounded-md bg-bs-surface-2 border-bs-surface-3">

    <!-- Credits Content -->
    <div class="flex-1 space-y-6 [&_a]:underline [&_a]:underline-offset-4 [&_a]:decoration-bs-foreground-dark/80 [&_a]:hover:decoration-bs-foreground-light">
      <!-- Title -->
      <h1 class="bs-h1">{ credits.title }</h1>

      <!-- Content -->
      <div class="text-pretty bs-body-text md:text-2xl" set:html={ credits.content }></div>

      <!-- List -->
      <ul role="list" class="md:text-xl list-inside space-y-2">
        { credits.list.map(({ item }) => item && <li set:html={item} />) }
      </ul>
    </div>

    <!-- Logo Image (Right Side) -->
   <div class="flex-shrink-0 my-auto">
      <img src="/content-images/cpslogo.png" alt="Logo" class="w-24 md:w-50 h-auto object-contain" />
    </div>

  </section>

</Layout>
